<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="cmpe277.spring2021.homework.Title.TitleFragment"

        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="cmpe277.spring2021.homework.Detail.Detailed"

        tools:layout="@layout/fragment_detail" >
       <action
            android:id="@+id/action_detailFragment_to_summaryFragment"
            app:destination="@id/summary_scroll" />

    </fragment>

    <fragment
        android:id="@+id/summary_scroll"
        android:name="cmpe277.spring2021.homework.Network.SummaryView"
        tools:layout="@layout/fragment_summary" >
    </fragment>


</navigation>